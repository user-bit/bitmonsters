.mission-bottom
  position relative
  margin: 250px 0
  @media (max-width: 1000px)
    margin 50px 0 200px
  @media (max-width: 756px)
    margin 35px 0 305px
  &__texture
    display none
    @media (max-width: 756px)
      display block
      position absolute
      right 40px
      top 270px
      img
        width: 165px
        height: 165px
  &__word
    position absolute
    top: -230px
    right: -200px
    @media (max-width: 1000px)
      top: -70px
    @media (max-width: 756px)
      top: 45px
      right: -254px
    img
      mix-blend-mode: screen
      position relative
      z-index -1
      @media (max-width: 1440px)
        width 810px
      @media (max-width: 1000px)
        width 525px
      @media (max-width: 756px)
        width 420px
  &__content
    width 75%
    display flex
    justify-content space-between
    flex-wrap wrap
    @media (max-width: 756px)
      width 100%
  &__item
    background: rgba(0,0,0,.3)
    border: 1px solid rgba(50, 37, 66, 0.5)
    box-shadow: 0 15px 13px rgb(0 0 0 / 11%)
    border-radius: 20px
    padding: 35px 0
    margin-bottom: 18px
    position relative
    overflow hidden
    @media (min-width: 756px)
      //backdrop-filter: blur(28px)
      background: linear-gradient(225deg, rgba(91, 12, 161, 0.05) 0%, rgba(39, 30, 249, 0.05) 30.49%, rgba(121, 57, 253, 0.05) 64.35%, rgba(166, 71, 255, 0.05) 100%), rgba(0, 0, 0, 0.3);
