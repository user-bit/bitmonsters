.info
  position relative
  &__texture
    position absolute
    display none
    right: -52px
    bottom: 105px
    @media (max-width: 756px)
      display block
  &__bg-left
    position: absolute
    width: 753.07px
    height: 817.73px
    left: -450px
    top: -256px
    background: rgba(252,253,74,0.15)
    opacity: 0.5
    //filter: blur(200px)
    @media (max-width: 756px)
      display none
  &__bg-right
    position: absolute
    width: 753.07px
    height: 817.73px
    right: -300px
    top: 600px
    background: #9636EF
    opacity: 0.15
    //filter: blur(200px)
    @media (max-width: 756px)
      width: 201px
      height: 200px
      background: #9636ef
      opacity: 0.2
      //filter: blur(80px)
      right: -105px
      top: unset
      bottom: 17px
  &__line-one
    height 1px
    background  #322542
    position: absolute
    top: 160px
    left: 0
    right: 0
    z-index: -1
    @media (max-width: 756px)
      top: 140px
    &:before
      content: ""
      z-index 1
      display: block
      position: absolute
      width: 20vh
      height: 100%
      top: 0
      background: #9636ef
      right: -20%
      will-change: right
      animation: run 10s 0s infinite
      animation-fill-mode: forwards
      animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
      @media (min-width: 756px)
        background: linear-gradient(225deg, #3b1aa7 0%, #4e31b3 30.49%, #9636ef 64.35%, #f682bd 100%)
  &__line-two
    height 1px
    background  #322542
    position: absolute
    top: 350px
    left: 0
    right: 0
    z-index: -1
    @media (max-width: 756px)
      top: 260px
    &:before
      content: ""
      z-index 1
      display: block
      position: absolute
      background: #9636ef
      will-change: right
      width: 20vh
      height: 100%
      top: 0
      right: -20%
      animation: run 21s 0s infinite
      animation-fill-mode: forwards
      animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
      @media (min-width: 756px)
        background: linear-gradient(225deg, #3b1aa7 0%, #4e31b3 30.49%, #9636ef 64.35%, #f682bd 100%)
  &__line-three
    height 1px
    background  #322542
    position: absolute
    top: 510px
    left: 0
    right: 0
    z-index: -1
    @media (max-width: 756px)
      top: 380px
    &:before
      content: ""
      z-index 1
      display: block
      position: absolute
      width: 20vh
      height: 100%
      background: #f682bd
      will-change: right
      top: 0
      right: -20%
      animation-delay 4s
      animation: run 17s 0s infinite
      animation-fill-mode: forwards
      animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
      @media (min-width: 756px)
        background: linear-gradient(225deg, #3b1aa7 0%, #4e31b3 30.49%, #9636ef 64.35%, #f682bd 100%)

.info-top
  margin: 180px 0
  @media (max-width: 1165px)
    margin 90px 0
  @media (max-width: 756px)
    margin 70px 0
  &__content
    display flex
    align-items center
    width: 1320px
    margin: auto
    @media (max-width: 1440px)
      width 100%
    @media (max-width: 1000px)
      flex-wrap wrap
  &__left
    width 45%
    @media (max-width: 1000px)
      width 100%
      display: flex
      justify-content: center
  &__right
    width 55%
    @media (max-width: 1000px)
      width 100%
  &__title
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 48px
    line-height: 1.3
    text-transform uppercase
    letter-spacing 2px
    @media (max-width: 1440px)
      font-size 38px
    @media (max-width: 1165px)
      font-size 30px
    @media (max-width: 756px)
      font-size 24px
      padding-right 25px
  &__desc
    font-style: normal
    font-weight: 400
    font-size: 24px
    color: #CECECE
    opacity: 0.8
    margin-top: 20px
    @media (max-width: 1440px)
      font-size 20px
    @media (max-width: 756px)
      font-size 16px
      margin-top 10px
  &__photo
    width: 430px
    height 420px
    position relative
    @media (max-width: 756px)
      width 285px
      height 285px
    .main-photo img
      position absolute
      z-index 1
      left 50%
      top 50%
      transform translate(-50%, -50%)
      @media (max-width: 756px)
        width 110px
        height 110px
  &__bg
    position absolute
    z-index 1
    left 50%
    top 50%
    transform translate(-50%, -50%)
    @media (max-width: 756px)
      width 230px
      height 230px

.info-top__bg-anim
  width: 100%
  height: 100%
  animation: 60s ease-in 1s infinite reverse both running circle

.arrow-up
  &__one
    position: absolute
    width: 35px
    height: 35px
    left: 311px
    top: 65px
    z-index: 2
    animation: 8s ease-in 1s infinite reverse both running wakeUpSm
    @media (max-width: 756px)
      left 190px
      width 18px
      height 18px
  &__two
    position: absolute
    width: 35px
    height: 35px
    left: 330px
    bottom: 75px
    z-index: 2
    transition-delay 0.4s
    animation: 12s ease-in 1s infinite reverse both running wakeUpSm
    @media (max-width: 756px)
      left 200px
      width 18px
      height 18px
  &__three
    position: absolute
    width: 35px
    height: 35px
    left: 60px
    bottom: 125px
    z-index: 2
    animation-delay: 0.9s;
    animation 9s ease-in 1s infinite reverse both running wakeUpSm2
    @media (max-width: 756px)
      left 55px
      width 18px
      height 18px

.about
  margin: 170px 0 0
  @media (max-width: 1440px)
    margin 130px 0 0
  @media (max-width: 756px)
    margin 30px 0
  & .container
    position relative
  &__circle
    position absolute
    right: -50px
    z-index: 1
    top: 50px
    animation 9s ease-in 1s infinite reverse both running wakeUpSm2
  &__title
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 48px
    line-height: 60px
    text-transform uppercase
    text-align center
    @media (max-width: 1440px)
      font-size 42px
    @media (max-width: 1000px)
      font-size 32px
      text-align left
    @media (max-width: 756px)
      font-size 24px
  &__content
    margin: 32px auto 0
    @media (max-width: 1000px)
      margin 12px auto 0
    & .swiper-slide
      height unset !important
  &__item
    background: #0d0f20
    border: 1px solid rgba(255, 255, 255, 0.1)
    box-shadow: 0 15px 13px rgba(0, 0, 0, 0.11)
    //backdrop-filter: blur(28px)
    border-radius: 40px
    padding: 28px
    width: 100%
    height 100%
    @media (max-width: 1440px)
      padding 14px
      border-radius 20px
    @media (max-width: 756px)
      padding 30px
  &__photo
    width: 100%
    height: 415px
    overflow: hidden
    border-radius: 25px
    @media (max-width: 1440px)
      height 280px
    @media (max-width: 756px)
      height 215px
    img
      width 100%
      height 100%
      object-fit cover
  &__position
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 14px
    margin-top: 24px
    color: rgba(231, 231, 231, 0.5)
    letter-spacing: 4px
    @media (max-width: 1440px)
      font-size 13px
    @media (max-width: 756px)
      margin-top 34px
  &__name
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 24px
    color: #E7E7E7
    text-transform: uppercase
    margin-top: 14px
    letter-spacing 2px
    @media (max-width: 1440px)
      font-size 20px
    @media (max-width: 756px)
      font-size 24px
  &__desc
    font-style: normal
    font-weight: 400
    font-size: 18px
    line-height: 1.4
    color: #94A3B8
    margin-top: 24px
    @media (max-width: 1440px)
      margin-top 15px
      font-size 15px
    @media (max-width: 756px)
      font-size 18px
      margin-top: 23px
      color: rgba(231, 231, 231, 0.8)
      line-height: 1.2
  &__container
    display none
    @media (max-width: 1000px)
      display: flex
      width: 50px
      justify-content: space-between
      position: absolute
      right: 0
      top: 19px
      svg
        width 12px
        height auto
