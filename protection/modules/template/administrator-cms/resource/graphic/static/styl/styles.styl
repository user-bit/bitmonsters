.graphic-top
  margin-top: 130px
  @media (max-width: 1000px)
    margin-top 55px
  @media (max-width: 756px)
    margin-top 95px
  &__bg
    position: relative
    z-index: 2
    background: linear-gradient(225deg, rgba(91, 12, 161, 0.05) 0%, rgba(39, 30, 249, 0.05) 30.49%, rgba(121, 57, 253, 0.05) 64.35%, rgba(166, 71, 255, 0.05) 100%), rgba(0 0 0 0.4);
    border-radius: 20px
    & > svg
      width 100%
      height: 100%
      display: block
  &__content
    display: flex
    align-items center
    width: 84%
    margin: auto
    @media (max-width: 1440px)
      width 100%
    @media (max-width: 756px)
      flex-wrap wrap-reverse
  &__left
    width: 60%
    position relative
    @media (max-width: 756px)
      width 100%
    @media (max-width: 756px)
      margin-top 15px
  &__graphic
    position absolute
    z-index: 2
    top: 0
    left: 42px
    svg
      width 100%
      height 100%
  &__right
    width 40%
    padding-left 150px
    @media (max-width: 1165px)
      padding-left 80px
    @media (max-width: 1000px)
      padding-left 50px
    @media (max-width: 756px)
      width 100%
      padding-left 0
  &__name
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 48px
    text-transform: uppercase
    letter-spacing 2px
    @media (max-width: 1440px)
      font-size 38px
    @media (max-width: 1000px)
      font-size 30px
    @media (max-width: 756px)
      font-size 24px
  &__desc
    margin-top: 20px
    font-family: 'Inter'
    font-style: normal
    font-weight: 400
    font-size: 24px
    line-height 1.3
    color: rgba(231, 231, 231, 0.8)
    @media (max-width: 1440px)
      font-size 22px
    @media (max-width: 1000px)
      font-size 16px
    @media (max-width: 756px)
      margin-top 12px

.graphic-bottom
  margin-top: 135px
  position relative
  @media (max-width: 756px)
    margin-top 135px
  &__line-one
    @media (max-width: 756px)
      height 1px
      background  #322542
      position: absolute
      top: 303px
      left: -500px
      right: -500px
      z-index: -3
      transform: rotate(329deg)
      &:before
        content: ""
        z-index 1
        display: block
        position: absolute
        width: 20vh
        background: #9636ef
        will-change: right
        height: 100%
        top: 0
        right: -20%
        animation: run 18s 0s infinite
        animation-fill-mode: forwards
        animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
  &__line-two
    @media (max-width: 756px)
      height 1px
      background  #322542
      position: absolute
      top: 365px
      left: -500px
      right: -500px
      z-index: -3
      transform: rotate(329deg)
      &:before
        content: ""
        z-index 1
        display: block
        position: absolute
        width: 20vh
        height: 100%
        background: #9636ef
        will-change: right
        top: 0
        right: -20%
        animation: run 12s 0s infinite
        animation-fill-mode: forwards
        animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
  &__line-three
    @media (max-width: 756px)
      height 1px
      background  #322542
      position: absolute
      top: 420px
      left: -500px
      right: -500px
      z-index: -3
      transform: rotate(329deg)
      &:before
        content: ""
        z-index 1
        display: block
        position: absolute
        width: 20vh
        height: 100%
        background: #9636ef
        will-change: right
        top: 0
        right: -20%
        animation: run 10s 0s infinite
        animation-fill-mode: forwards
        animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97)
  &__left-texture
    position absolute
    left: -170px
    top: 220px
    z-index -1
    animation 8s ease-in 1s infinite reverse both running wakeUpSm1
    @media (max-width: 1000px)
      width 300px
      left -100px
    @media (max-width: 756px)
      left: -167px
      top: -160px
  &__left-gradient
    @media (min-width: 756px)
      position: absolute;
      background: rgba(193, 41, 205, 0.25)
      opacity: 0.5;
      filter: blur(200px);
      width: 565px
      height: 610px
      left: -231px
      top: 100px
      z-index -1
  &__right-texture
    display none
    @media (min-width: 756px)
      position absolute
      right: -20px
      top: 540px
      z-index -1
      animation-delay: 1.4s;
      animation 13s ease-in 1s infinite reverse both running wakeUpSm2
  &__content
    display: flex
    justify-content: space-between
    align-items: center
    width: 84%
    margin: auto
    @media (max-width: 1440px)
      width 100%
    @media (max-width: 756px)
      flex-wrap wrap-reverse
  &__left
    width 55%
    @media (max-width: 756px)
      width 100%
  &__right
    width 45%
    text-align: center
    position relative
    @media (max-width: 756px)
      width 100%
    @media (max-width: 756px)
      img
        width 200px
    &:before
      content ""
      position absolute
      background #4E31B3
      opacity: 0.4
      filter: blur(255px)
      transform: rotate(-60deg)
      width: 440px
      height: 400px
      top: 80px
      left 80px
      @media (max-width: 756px)
        width 160px
        height 140px
        top: 0
        opacity: 1
        filter: blur(159px)
      @media (min-width: 756px)
        background: linear-gradient(225deg, #3B1AA7 0%, #4E31B3 30.49%, #9636EF 64.35%, #F682BD 100%)
  &__name
    font-family: 'Monument Extended', sans-serif
    font-style: normal
    font-weight: 400
    font-size: 48px
    text-transform: uppercase
    letter-spacing 2px
    @media (max-width: 1440px)
      font-size 34px
    @media (max-width: 1000px)
      font-size 30px
    @media (max-width: 756px)
      font-size 24px
      margin-top: 21px
  &__desc
    margin-top: 20px
    font-family: 'Inter'
    font-style: normal
    font-weight: 400
    font-size: 24px
    line-height 1.3
    color: rgba(231, 231, 231, 0.8)
    @media (max-width: 1440px)
      font-size 18px
    @media (max-width: 1000px)
      font-size 16px
    @media (max-width: 756px)
      margin-top 15px
      line-height 1.2
  &__btn
    margin-top 40px
    @media (max-width: 756px)
      margin-top 30px
    a
      background: #181a25
      border: 1px solid rgba(50,37,66,0.5)
      border-radius: 10px
      font-style: normal
      font-weight: 600
      font-size: 18px
      text-transform: uppercase
      color: #e2e8f0
      display: inline-block
      text-decoration: none
      padding: 14px 32px
      transition all 0.3s ease-in-out
      &:hover
        background: linear-gradient(225deg, #3B1AA7 0%, #4E31B3 30.49%, #9636EF 64.35%, #F682BD 100%)
      @media (max-width: 1000px)
        font-size 16px
        padding 10px 28px
      @media (max-width: 765px)
        font-size 18px