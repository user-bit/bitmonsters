.modal-error
  position: fixed
  z-index: 9999
  background: #fff
  width: 400px
  top: 40px
  left: 50%
  margin-left: -200px
  box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,.1)
  &__header
    border-bottom: 1px solid rgba(0,0,0,.05)
    padding: 5px 8px
    position relative
  &__left
    display: flex
    align-items center
    svg
      width: 20px
      height: 20px
      stroke: #ff5c75
    span
      text-transform: uppercase
      letter-spacing: 0.3px
      line-height: 1
      padding-left: 4px
      color #ff5c75
      position: relative
      top: 1px
  &__close
    position: absolute
    right: 10px
    top: 3px
    font-size: 24px
    line-height: 1
    cursor pointer
    span
      color: #6c757d
      &:hover
        color: #4b4b5a
  &__content
    padding: 18px 10px 12px
    font-size: 15px

