.header
  &__top
    position: fixed
    top: 0
    left: 0
    right: 0
    height: 72px
    z-index: 100
    background-color: white
    box-shadow: 0 0.05rem 0.01rem rgba(75,75,90,.075)
  &__logo
    display: flex
    align-items: center
    a
      text-decoration none
  &__site
    padding-right: 30px
    border-right: 1px solid #4b4b5a
  &__right
    display flex
    align-items center
  &__site
    &-link
      font-size: 14px
      font-weight: 400
      text-transform: lowercase
      color: color-main
      text-decoration: none
      &:hover
        color #5369f8
  &__icon
    cursor: pointer
    display: flex
    margin-left: 26px
    &:hover
      svg
        color: #5369f8
        fill: rgba(83,105,248,.1)
    svg
      height: 20px
      width: 20px
      color: #4b4b5a
      fill: rgba(75,75,90,.12)



.logo
  &__left
    padding-right 8px
    svg
      width: 40px
      height: 40px
  &__right
    a
      display: block
      font-size: 20px
      text-decoration none
      text-transform: uppercase
      font-weight: 500
      color: #1e73be
      letter-spacing: 1px

