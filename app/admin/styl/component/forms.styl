.form-group
  margin-bottom: 24px
  label
    font-size: 15px
    margin-bottom: 6px
    display: block

.form-control
  display: block
  width: 100%
  height: 36px
  padding: 0.5rem 0.75rem
  font-size: 0.875rem
  font-weight: 400
  line-height: 1.5
  color: color-main
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #e2e7f1
  border-radius: 0.3rem
  transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out
  &__readonly
    opacity: 0.7
    background: #f5f5f5
    &:focus
      border-color: #e2e7f1 !important
      background: #f5f5f5 !important
  &:focus
    color: #4b4b5a
    background-color: #fff
    border-color: #5369f8
    outline: 0
    box-shadow: none

.custom-select
  max-width 245px
  display: block
  width: 100%
  height: 33px
  padding: 0.5rem 0.5rem
  font-size: 13px
  font-weight: 400
  line-height: 1.5
  color: color-main
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #e2e7f1
  border-radius: 0.3rem
  transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out
  &:focus
    color: #4b4b5a
    background-color: #fff
    border-color: #5369f8
    outline: 0
    box-shadow: none

.custom-select-large
  font-size: 0.875rem
  height 36px

.form-textarea
  display: block
  width: 100%
  height: 52px
  padding: 0.5rem 0.75rem
  font-size: 0.875rem
  font-weight: 400
  line-height: 1.5
  color: color-main
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #e2e7f1
  border-radius: 0.3rem
  transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out
  &__h-120
    height 120px
  &:focus
    color: #4b4b5a
    background-color: #fff
    border-color: #5369f8
    outline: 0
    box-shadow: none

.no-size
  resize: none

.custom-control-label:checked,
.custom-control-label:not(:checked)
  position: absolute
  opacity 0
  & + label
    position: relative
    cursor pointer
    &:before
      border-radius: 0.3rem
      content: ''
      position: absolute
      left: -3px
      top: -9px
      width: 16px
      height: 16px
      border: 1px solid #ddd
      background: #fff
      transition: background-color 0.15s ease-in-out,border-color 0.15s ease-in-out,box-shadow 0.15s ease-in-out

.custom-control-label:checked +label
  &:before
    background-color: #5369f8
    border-color: #5369f8
  &:after
    content: ''
    position: absolute
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3e%3c/svg%3e")
    left: 1px
    top: -5px
    background-size: 10px
    width: 10px
    height: 10px

.custom-control-label-all:checked,
.custom-control-label-all:not(:checked)
  position: absolute
  left: -9999px
  & + label
    position: relative
    cursor pointer
    &:before
      border-radius: 0.3rem
      content: ''
      position: absolute
      left: -3px
      top: -9px
      width: 16px
      height: 16px
      border: 1px solid #ddd
      background: #fff
      transition: background-color 0.15s ease-in-out,border-color 0.15s ease-in-out,box-shadow 0.15s ease-in-out


.custom-control-label-all:checked +label
  &:before
    background-color: #5369f8
    border-color: #5369f8
  &:after
    content: ''
    position: absolute
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3e%3c/svg%3e")
    left: 1px
    top: -5px
    background-size: 10px
    width: 10px
    height: 10px

.custom-control-label-list
  margin: 10px 0
  &__sub2
    margin-left: 25px
  &__sub3
    margin-left: 50px
  label
    padding-left 20px
    &:before
      top 0 !important
    &:after
      top 4px !important

.custom-radio
  position: relative
  display: block
  margin-bottom: 14px
  &__list
    margin-bottom 0
  &__input
    position: absolute
    z-index: -1
    opacity: 0
  &__label
    position: relative
    margin-bottom: 0
    vertical-align: top
    padding-left: 22px
    &:before
      content: ""
      position: absolute
      top: 1px
      left: 0
      display: block
      width: 15px
      height: 15px
      pointer-events: none
      border: #adb5bd solid 1px
      border-radius: 50%
      transition: background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out,-webkit-box-shadow .15s ease-in-out
    &:after
      content: ""
      position: absolute
      top: 7px
      left: 6px
      width: 5px
      height: 5px
      border-radius: 50%
      background: #fff

.custom-radio__input:checked~.custom-radio__label::before
  color: #fff
  border-color: #5369f8
  background-color: #5369f8

.form-checkbox
  & .custom-control-label:checked + label,
    .custom-control-label:not(:checked) + label
    &:before
      left 0
      top 0
    &:after
      left: 4px
      top: 4px
  & label
    padding-left 24px
    font-size 15px

.select-field
  margin-top: 12px
  &__item
    display: flex
    margin-bottom: 10px
    & input:checked ~ label
      &:before
        color: #fff
        border-color: #5369f8
        background-color: #5369f8
      &:after
        opacity 1
    input
      position: absolute
      z-index: -1
      opacity: 0
    label
      margin-bottom unset
      position: relative
      font-size: 14px
      font-weight: 500
      padding-top: 2px
      padding-left 24px
      &:before
        content: ""
        position: absolute
        border-radius: 50%
        top: 0
        left: 0
        display: block
        width: 1rem
        height: 1rem
        pointer-events: none
        background-color: #fff
        border: #adb5bd solid 1px
        transition: background-color .15s ease-in-out,border-color .15s ease-in-out
      &:after
        content: ""
        position: absolute
        width: 0.5rem
        height: 0.5rem
        background: #fff
        left: 5px
        top: 5px
        border-radius: 50%
        opacity 0
        transition: opacity .15s ease-in-out

.custom-control-label-list-select
  display: flex
  align-items center
  width: 450px
  &__input
    width: 100%

