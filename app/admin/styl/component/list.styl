.list-group
  padding: 1.25rem 1.25rem
  box-shadow: 0 0.05rem 0.01rem rgba(75,75,90,0.075)
  border-radius: 0.25rem
  background: #fff
  margin-bottom: 22px
  &__title
    &:hover
      svg
        color color-blue
      a
        color color-blue
    svg
      width: 16px
      height: 16px
      color: #4b4b5a
      fill: rgba(75,75,90,0.12)
      transition: transform 0.35s ease-in-out
    a
      color: color-main
      font-size: 16px
      font-weight: 400
      line-height: 1
      text-decoration none
      display: flex
      transition color 0.2s ease-in-out
      span
        display: block
        margin-top: 2px
        margin-left: 8px
  &__list
    list-style-type none
    padding 0
    li
      margin-bottom: 6px
      padding-bottom: 6px
      border-bottom: 1px solid #f6f6f7
      display flex
      flex-wrap: wrap
      &.active
        a
          color color-blue
      &:hover
        & > svg
          color color-blue
        & > a
          color color-blue
      svg
        width: 16px
        height 16px
        transition color 0.2s ease-in-out
      a
        color: color-main
        font-size: 16px
        font-weight: 400
        line-height: 1
        text-decoration none
        transition color 0.2s ease-in-out
        margin-left: 8px
        margin-top: 2px

