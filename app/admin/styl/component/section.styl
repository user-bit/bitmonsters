.section
  width: 100%
  &__row
    margin-left -12px
    margin-right -12px
    display: flex
    flex-wrap: wrap
  form
    display flex
    flex-wrap wrap
    margin-left: -12px
    margin-right: -12px
  &__content
    position relative
    padding: 1.25rem 1.25rem 2.5rem 1.25rem
    box-shadow: 0 0.05rem 0.01rem rgba(75,75,90,0.075)
    border-radius: 0.25rem
    background: #fff
    margin: 12px
  &__template
    display: flex
    flex-wrap: wrap
    border-top: 1px solid #ccc
    padding-top: 40px
    margin: 70px -20px 0
  &__content-w-100
    width 100%
  &__content-w-30
    width calc(30% - 24px)
  &__content-w-40
    width calc(40% - 24px)
  &__content-w-50
    width: calc(50% - 24px)
  &__content-w-60
    width: calc(60% - 24px)
  &__content-w-70
    width: calc(70% - 24px)
  &__title
    color: #4b4b5a
    font-weight: 500
    font-size: 18px
    margin-bottom: 26px
    margin-top: 10px
    span
      display: inline-block
      font-size: 12px
      font-weight: 400
  &__w-50
    width 50%
  &__editor
    margin-bottom 20px
    label
      color #6c757d
      position relative
      margin-bottom: 6px
      display: block
      span
        color #ff5c75
        font-size: 18px
        font-weight: 600
        margin-left 10px
  &__field
    margin-bottom: 20px
    &-photo
      margin-bottom: 40px
      padding-bottom: 30px
      border-bottom: 1px dashed #929292
      img
        width 75%
      span
        margin-left 10px
        width: 75%
    label
      color #6c757d
      position relative
      margin-bottom: 6px
      display: block
      span
        color #ff5c75
        font-size: 18px
        font-weight: 600
        margin-left 10px
    span
      line-height 1.4
    a
      display block
      color #1e73be
      margin-top: 10px
  &__no-link
    position: absolute
    right: 0
    top: 0
    label
      padding-right 24px
      font-size 14px
      padding-top: 2px
      &:before
        right 0
        left unset !important
        top 0 !important
      &:after
        right: 4px
        top: 4px !important
        left: unset !important
  &__info-open
    margin-top 40px
    span
      font-size 14px
      display block
      margin-bottom: 10px
  &__overflow
    opacity 0.35
    pointer-events none
    margin-top: 30px
    &.active
      pointer-events auto
      opacity 1

.position
  width: 550px
  margin-bottom: 30px
  max-height: 220px
  overflow: auto
  &__item
    display: flex
    align-items: center
    margin-bottom: 20px
    &.active
      & .position__btn
        &:before
          background-image url("/resource/administrator-cms/images/svg/enter-red.svg")
        input
          background-color: rgba(255,92,117,0.15)
          color: #ff5c75
  &__name
    width calc(100% - 175px)
  &__btn
    width 100px
    position relative
    &:before
      content: ""
      position: absolute
      left: 14px
      top: 6px
      width: 14px
      height: 14px
      background-size: 14px
      background-image url("/resource/administrator-cms/images/svg/enter.svg")
    input
      cursor pointer
      border: unset
      font-size: 12px
      background-color: rgba(83,105,248,0.15)
      color: #5369f8
      padding: 0.25rem 0.8rem 0.25rem 1.8rem
      line-height: 1.5
      border-radius: 0.2rem
      text-decoration: none
      position: relative
      margin: 0 4px
      outline none
      &:hover
        background-color: rgba(83,105,248,0.2)
        color: #5369f8

.nav
  width: 100%
  background: #ffffff
  border-radius: .3rem
  padding: 6px 2px
  margin: 12px
  &__list
    display flex
  &__item
    color: #6c757d
    background-color: unset
    margin: 6px 10px
    padding: 8px 30px
    border-radius: 0.3rem
    font-weight: 500
    cursor: pointer
    transition color 0.2s ease-in-out
    &:hover
      color #121415
    &.active
      background #f3f4f7
      color #6c757d

.tabs
  width: 100%
  display: flex
  flex-wrap: wrap

.product-price
  display: flex
  align-items: flex-end
  margin 0 -10px 50px
  &__item
    width: 100%
    margin: 0 10px
  &__btn
    width: 100%
    height: 36px
    background: #5369f8
    color: #fff
    font-size: 17px
    border: unset
    border-radius: 4px
    cursor: pointer
    transition background-color 0.3s ease-in-out
    &:hover
      background #2e49f7

.comment-prod
  display: flex
  align-items: center
  border: 1px solid #e8e8e8
  padding: 20px 10px
  margin: 0 0 25px
  &__photo
    width 120px
    img
      width 100%
  &__right
    width calc(100% - 120px)
    padding-left 18px
  &__title
    font-size: 22px
    margin-bottom: 10px
  &__link
    a
      color #4b4b5a

.main-price
  &__price
    font-size: 32px
    font-weight: 600
    color: red
    span
      font-size 24px

.main-product
  &__count
    font-size: 32px
    font-weight: 600
    color: #5369f8

.sitemap-section
  margin-bottom: 50px
  &__bnt
    margin-top 25px