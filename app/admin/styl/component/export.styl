.export-hr
  border-top: 1px solid #dcdcdc
  margin-top: 50px
  padding-top: 30px

.export-import
  &__list
    display: flex
    flex-wrap: wrap
    margin: 30px -20px 0
  &__item
    width: calc(25% - 40px)
    margin: 0 20px
    display: flex
    align-items: center
    justify-content: center
    box-shadow: 0 0 4px #e8e8e8
    border-radius: 8px
    margin-bottom 20px
    transition box-shadow 0.3s ease-in-out
    &:hover
      box-shadow: 0 0 15px #e8e8e8
    a
      padding: 28px 0
      text-decoration none
      color #4b4b5a
      font-size 18px
      width: 100%
      text-align: center

.export-file
  &__check
    margin: 10px 5px 30px
    width 100%
  &__text
    font-size: 14px
    margin-bottom: 15px
    border-bottom: 1px solid #cecece
    padding-bottom: 15px
    line-height 1.5
  &__btn
    background-color: #5369f8;
    cursor: pointer
    color: #fff
    border-radius: 4px
    border: unset
    padding: 9px 24px 9px
    transition: background-color 0.3s ease-in-out
    &:hover
      background: #2e49f7
  &__date
    width: 100%
    font-size: 14px
    color: #909090
    font-weight 700
    margin-bottom: 15px
    margin-top 20px
    span
      font-weight 400
      font-size: 14px
      color: #909090
  &__see
    margin-bottom: 30px
    span
      font-size: 14px
    input
        background: #ececec
        padding: 5px 10px
        border-radius: 6px
        width: calc(100% - 180px)
        outline: none
        border: unset
        font-size: 14px
  &__down
    a
      background-color: #43d39e
      cursor: pointer
      color: #fff
      border-radius: 4px
      display: inline-block
      border: unset
      padding: 9px 24px 9px
      text-decoration: none
      transition: background-color 0.3s ease-in-out
      &:hover
        background-color: #2dc28c

.import-file
  &__w100
    width: 100%
    margin-bottom: 25px
  &__btn
    background-color: #5369f8;
    cursor: pointer
    color: #fff
    border-radius: 4px
    border: unset
    padding: 9px 24px 9px
    transition: background-color 0.3s ease-in-out
    &:hover
      background: #2e49f7
  &__instruction
    margin-bottom: 5px
    border-bottom: 1px solid #cecece
    padding-bottom: 25px
    width: 100%