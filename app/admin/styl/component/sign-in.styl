.sign-in
  width: 900px
  margin: auto
  padding-top: 140px
  &__content
    background #ffffff
    display: flex
    justify-content: space-between
    height: 550px
    overflow: hidden
  &__left
    width: 50%
    padding: 30px
  &__logo
    display: flex
    align-items: center
    svg
      width: 40px
      height: 40px
    span
      display: block
      font-size: 20px
      text-decoration: none
      text-transform: uppercase
      font-weight: 500
      color: #1e73be
      letter-spacing: 1px
      padding-left: 10px
  &__title
    color: #4b4b5a
    font-size: 18px
    font-weight: 500
    margin-top: 45px
  &__pass
    position relative
  &__desc
    color: #6c757d
    font-size: 14px
    margin-top: 8px
  &__form
    margin-top: 50px
  &__btn
    background-color: #5369f8
    border-color: #5369f8
    margin-top 25px
    color: #fff
    width: 100%
    height: 42px
    border: unset
    border-radius: 6px
    outline none
    cursor: pointer
    transition 0.1s ease-in-out
    &:hover
      background-color: #2e49f7
      border-color: #223ef6
  &__right
    width 50%
    position relative
    &:before
      content ""
      position absolute
      background-color: rgba(0,0,0,.4)
      left 0
      top 0
      right 0
      bottom 0
    img
      width: 100%
      display: block

.forgot-link
  color: #6c757d
  position: absolute
  right: 10px
  border-bottom: #ced4da 1px dashed
  text-decoration: unset
  font-size: 15px
  &:hover
    border-bottom unset

