.constructor-list-photo
  height: 100px
  width: 400px
  object-fit: cover

.create-section-info
  margin-top: 35px
  &__btn
    color: #5369f8
    line-height: 1
    font-size: 17px
    cursor: pointer
    outline: none
    padding: 8px 20px 8px 52px
    background-color: rgba(83,105,248,.25)
    border: unset
    border-radius: 4px
    position: relative
    &:before
      content: "";
      position: absolute;
      background-image: url(/resource/administrator-cms/images/svg/block.svg);
      width: 22px;
      height: 22px;
      background-size: 22px;
      left: 18px;
      top: 5px;

.hr-bottom
  border-bottom: 1px dashed #b5b5b5
  padding-bottom: 22px

.hr-top
  border-top: 1px dashed #b5b5b5
  padding-top: 22px

.section-info-item
  display: flex
  justify-content: space-between
  flex-wrap wrap
  border: 1px dashed #b5b5b5
  padding: 30px 40px
  border-radius: 6px
  margin-bottom 45px
  &__preview
    width: 50%
    img
      width 100%
      height: 150px
      object-fit: contain
  &__info
    width 50%
  &__sort
    margin-top: 18px
  &__type
    margin-top 12px
    span
      font-weight: 500
      color: #ff7f92
  &__name
    span
      font-size: 22px
      font-weight: 500
  &__content
    width: 104%
    margin-left -2%
    margin-right -2%
    border-top: 1px dashed #b5b5b5
    display: none
    flex-wrap: wrap
    opacity 0
    height 0
    visibility hidden
    transition opacity 0s ease-in-out
    &.active
      display flex
      opacity 1
      height: 100%
      visibility visible
      margin-top 40px
      padding-top: 40px
      transition opacity 1s ease-in-out
    &-w100
      width 98%
      margin 0 2%
      margin-bottom 30px
    &-w50
      width: 46%;
      margin: 0 2%
      margin-bottom 30px
  &__btn
    display flex
    margin-top 15px
  &__add
    margin-left: 25px
  &__sort-input
    margin-left: 10px
    width: 70px
    height: 32px
    padding: 0.5rem 0.75rem
    font-size: 0.875rem
    font-weight: 400
    line-height: 1.5
    color: #4b4b5a
    background-color: #fff
    background-clip: padding-box
    border: 1px solid #e2e7f1
    border-radius: 0.3rem
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out
    &:focus
      color: #4b4b5a
      background-color: #fff
      border-color: #5369f8
      outline: 0
      box-shadow: none
  &__detail
    border: 1px dashed #b5b5b5
    border-radius: 4px
    display: flex
    width: 45px
    margin-top: 20px
    justify-content: center
    cursor: pointer
    transition background-color 0.2s ease-in-out
    &.active
      svg
        transform rotate(-180deg)
    &:hover
      background #f3f3f3
    svg
      width: 28px
      height: 28px
      transition transform 0.3s ease-in-out

.section-info-item-prev
  display: flex
  justify-content: space-between
  flex-wrap wrap
  border: 1px dashed #b5b5b5
  padding: 15px 30px
  border-radius: 6px
  margin-bottom 25px
  &__preview
    width: 50%
    img
      width 100%
      height: 150px
      object-fit: contain
  &__info
    width 50%
    display: flex
    flex-wrap: wrap
    align-content: center
  &__name
    margin-bottom 15px
    width 100%
    span
      font-weight 500

.modal-constructor
  opacity: 0
  visibility: hidden
  position: fixed
  left: 50%
  top: 35px
  width: 1200px
  margin-left: -600px
  background: #fff
  z-index: 9991
  box-shadow: 0 0.25rem 0.75rem #a2a2a2
  transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out
  &.active
    opacity 1
    visibility visible
  &__top
    width: 100%
    position: relative
    height: 38px
    border-bottom: 1px solid #bfbfbf
  &__close
    position: absolute
    right: 5px
    top: 4px
    cursor: pointer
    svg
      width: 30px
      height: 30px
      stroke: rgba(75, 75, 90, 0.7)
      transition: stroke 0.3s ease-in-out
      &:hover
        stroke: #4b4b5a
  &__content
    display: flex
    flex-wrap: wrap
    align-items flex-start
    padding: 20px 30px 0
    height: 70vh
    overflow-y: scroll
  &__template
    flex-wrap: wrap
    opacity 0
    visibility hidden
    display none
    &.active
      opacity 1
      visibility visible
      display: flex
  &__item
    width: calc(50% - 20px)
    margin 0 10px


.modal-constructor-tabs
  display: flex
  flex-wrap: wrap
  padding: 20px 40px 20px
  background-color: #fff
  box-shadow: 0 5px 5px 0 #eaeaea
  &__item
    background: #efefef
    margin-right: 15px
    padding: 10px 15px
    color: #000
    cursor: pointer
    border-radius 4px
    transition color 0.2s ease-in-out, background-color 0.2s ease-in-out
    &.active
      background-color #43d39e
      color #ffffff
    &:hover
      background-color #43d39e
      color #ffffff

.modal-constructor-overflow
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  background: rgba(0, 0, 0, 0.25);
  transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
  &.active
    opacity 1
    visibility visible

