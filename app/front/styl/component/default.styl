  font-family: 'Inter'
  src: url('/resource/front/fonts/Inter-SemiBold.woff2') format('woff2'),
          url('/resource/front/fonts/Inter-SemiBold.woff') format('woff'),
          url('/resource/front/fonts/Inter-SemiBold.ttf') format('truetype')
  font-weight: 600
  font-style: normal
  font-display: swap

